{
  "name": "@infinityxone/index",
  "version": "0.1.0",
  "private": true,
  "description": "Tier-0 Global Index / Capabilities Registry for Infinity X One Systems",
  "main": "dist/src/server/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,yml,md}'",
    "test": "jest --runInBand",
    "cli": "ts-node src/cli/index.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.4.0",
    "commander": "^10.0.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "openapi3-ts": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.6"
  }
}
